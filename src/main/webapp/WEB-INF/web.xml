<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
  <display-name>taxreportsystem</display-name>

  <!--    Main servlet-->
  <servlet>
    <servlet-name>Servlet</servlet-name>
    <servlet-class>ua.training.controller.Servlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/app/*</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>
      ua.training.controller.listener.SessionListener
    </listener-class>
  </listener>

  <listener>
    <listener-class>
      ua.training.controller.listener.ContextListener
    </listener-class>
  </listener>


  <!--    Encoding filter-->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>ua.training.controller.filters.EncodingFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>responseEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>



  <!--    Access filter-->
  <filter>
    <filter-name>AccessFilter</filter-name>
    <filter-class>ua.training.controller.filters.AccessFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AccessFilter</filter-name>
    <url-pattern>/app/*</url-pattern>
  </filter-mapping>



  <!--    Lang filter (localization)-->
  <filter>
    <filter-name>SessionLocaleFilter</filter-name>
    <filter-class>ua.training.controller.filters.SessionLocaleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SessionLocaleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <!--    Error page 403 - Forbidden-->
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/common/error/403.jsp</location>
  </error-page>

  <!--    Error page 404 - Not found-->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/common/error/404.jsp</location>
  </error-page>

  <!--    unclassified errors page-->
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/common/error/error.jsp</location>
  </error-page>
</web-app>